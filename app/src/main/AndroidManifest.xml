<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exemple.android.cookbook">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".supporting.MyFirebaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddRecipeActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".AddCategoryRecipeActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".AddStepActivity"
            android:screenOrientation="userPortrait" />
        <activity android:name=".RecipeListActivity" />
        <activity android:name=".RecipeActivity" />
        <activity android:name=".StepRecipeActivity" />
        <activity android:name=".AuthenticationActivity"></activity>
    </application>

</manifest>